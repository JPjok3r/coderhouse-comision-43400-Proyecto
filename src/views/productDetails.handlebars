<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6 productImage">
                <img class="card-img-top mb-5 mb-md-0 pImg" src={{prod.thumbnails}} alt={{prod.title}} />
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">{{prod.title}}</h1>
                <div class="fs-5 mb-5">
                    <span>{{prod.price}}</span>
                </div>
                <p class="lead">{{prod.description}}</p>
                <div class="d-flex">
                    <form method="post" id="agregarACarrito">
                        <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" />
                        <input type="hidden" name="cartId" value="{{user.cart}}" id="cartId">
                        <input type="hidden" name="productId" value="{{prod._id}}" id="productId">
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Agregar al carrito
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/js/functionality.js"></script>